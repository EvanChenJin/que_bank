@import "../../../common/templateStyle/partText.wxss";
/* community content */
.community-content {
  padding: 40rpx 20rpx 0 20rpx;
}
.community-img image {
  margin-bottom: 40rpx;
  width: 710rpx;
  height: 150rpx;
}
/* discuss content */
.community-discuss-item {
  margin-bottom: 40rpx;
  padding: 40rpx;
  background: #fff;
  border-radius: 6rpx;
}
/* discuss item personal info */
.community-poster {
  margin-bottom: 30rpx;
  height: 62rpx;
}
.community-poster image {
  float: left;
  margin-right: 25rpx;
  width: 62rpx;
  height: 62rpx;
}
.community-poster-info {
  float: left;
  font-size: 20rpx;
  color: #BEC8BF;
}
.community-poster-name {
  display: block;
  padding-bottom: 8rpx;
  font-size: 24rpx;
  color: #768979;
}
/* discuss item content info */
.community-poster-title {
  margin-bottom: 16rpx;
  display: block;
  font-size: 30rpx;
  color: #404040;
  line-height: 45rpx;
}
.community-poster-img image {
  margin: 0 24rpx 16rpx 0;
  width: 180rpx;
  height: 180rpx;
}
/* discuss item comment info */
.community-poster-comment {
  margin-top: 26rpx;
  font-size: 20rpx;
  color: #BEC8BF;
}
.poster-read-num {
  margin-right: 40rpx;
  padding-left: 26rpx;
  background: url(data:image/png;base64,)  no-repeat center left;
  background-size: 16rpx 8rpx;
}
.poster-comment-num {
  padding-left: 24rpx;
  background: url(data:image/png;base64,) no-repeat left center;
    background-size: 16rpx 16rpx;
}
/* public btn */
.public-news {
  position: fixed;
  bottom: 36rpx;
  right: 20rpx;
}
.public-news image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}