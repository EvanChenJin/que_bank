/* public cnt */
.public-cnt {
  position: relative;
  padding: 20rpx 20rpx 200rpx;
}
.public-cnt textarea {
  padding: 10rpx;
  width: 690rpx;
  height: 240rpx;
  line-height: 1.5;
  font-size: 20rpx;
  color: #ADADAD;
}
.public-word {
  margin: 20rpx 0 40rpx;
  font-size: 20rpx;
  color: #9A9A9A;
}
.public-word text {
  color: #FF9C00;
}
.public-upload {
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
}
.public-upload image {
  margin: 0 18rpx 20rpx 0;
  width: 100rpx;
  height: 100rpx;
}
.public-upload button {
  padding: 0;
  margin: 0;
  width: 100rpx;
  height: 100rpx;
}
.public-upload button image {
  margin: 0;
}
/* remove button default style */
.public-btn {
  position: absolute;
  top: 290rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #419AFF !important;
  background: none !important;
  border: 0;
}
.public-btn:after {
  border: none;
}