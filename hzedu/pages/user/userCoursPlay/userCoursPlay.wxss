/* pages/user/userCoursPlay/userCoursPlay.wxss */
/* video play area */
.course-play-cnt {
  margin-top: 40rpx;
  padding: 40rpx 20rpx 36rpx 20rpx;
  width: 710rpx;
  line-height: 1;
  background-color: #fff;
}
.course-play-video {
  width: 100%;
  height: 360rpx;
}
.course-play-name {
  display: block;
  margin-top: 24rpx;
  font-size: 24rpx;
  color: #768979;
}
.course-paly-teacher {
  display: block;
  padding-left: 28rpx;
  margin-top: 24rpx;
  font-size: 20rpx;
  color: #7F7F7F;
  background: url(data:image/png;base64,) no-repeat left center;
  background-size: 16rpx 21rpx;
}
/* recommend course */
.course-recommend {
  margin-top: 40rpx;
  padding: 40rpx 20rpx; 
  width: 710rpx;
  background: #fff;
}
.course-recommend-title {
  font-size: 32rpx;
  color: #404040;
}
/* recommend course item */
.course-recommend-item {
  padding: 40rpx 0;
  border-bottom: 2rpx solid #F2F2F2;
}
.course-recommend-des {
  width: 550rpx;
}
.course-recommend-name {
  display: block;
  font-size: 24rpx;
  color: #768979;
  line-height: 1.5;
}
.course-recommend-price {
  margin-right: 22rpx;
  font-size: 30rpx;
  color: #FF8A00;
}