/* header part */
.user-header {
  width: 100%;
  height: 435rpx;
  background: #78D435;
}
.user-base-info {
  color: #fff;
  text-align: center;
  line-height: 1;
}
.user-avatar {
  display: block;
  margin: 64rpx auto 35rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.user-nickname {
  display: block;
  padding-bottom: 24rpx;
  font-size: 32rpx;
}
.user-tel {
  display: block;
  font-size: 24rpx;
  background: url(data:image/png;base64,) no-repeat 275rpx top;
  background-size: 28rpx 36rpx;
}
/* body part */
.user-body {
  position: relative;
  padding: 120rpx 20rpx 0;
  background: #f4f4f4;
}
/* user info part one */
.user-info-top {
  position: absolute;
  top: -80rpx;
  left: 20rpx;
  justify-content: space-around;
  padding: 32rpx 0;
  box-shadow:0px 3px 15px 0px rgba(239,239,239,0.75);
}
.user-info-item {
  width: 120rpx;
  line-height: 1;
  text-align: center;
}
.user-info-item image {
  margin-bottom: 24rpx;
  width: 50rpx;
  height: 50rpx;
}
.user-info-item text {
  display: block;
  font-size: 30rpx;
  color: #2C2C2C;
}
/* user info part two */
.user-info-bottom {
  padding-bottom: 60rpx;
  box-shadow:0px 3px 15px 0px rgba(239,239,239,0.75);
}
.user-info-part {
  display: block;
  padding: 40rpx 0 25rpx 30rpx;
  width: 640rpx;
  font-size: 30rpx;
  color: #5C5D5A;
  background: url(data:image/png;base64,) no-repeat right center;
  background-size: 12rpx 20rpx;
}
.user-info-part-loginout {
  background: #fff;
}