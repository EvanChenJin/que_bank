/* pages/course/courPay/courPay.wxss */
@import "../../../common/templateStyle/topBar.wxss";
/* course pay */
.course-pay-cnt {
  padding: 40rpx 20rpx 0 20rpx;
  width: 710rpx;
}
.course-pay-panel {
  padding: 0 30rpx 40rpx;
  background: #fff;
  border-radius: 6rpx;
}
.course-pay-panel > view, .course-pay-panel > navigator {
  padding: 40rpx 0;
  line-height: 1;
  border-bottom: 2rpx solid #D9D9D9;
}
/* course base info */
.course-pay-top text {
  display: block;
  padding-left: 14rpx;
}
.course-title {
  padding-bottom: 30rpx;
  font-size: 30rpx;
  color: #404040;
  line-height: 1.5;
}
.course-price {
  font-size: 36rpx;
  color: #FF8A00;
}
/* personal info */
.course-pay-bottom {
  font-size: 24rpx;
  color: #989898;
  background: url(data:image/png;base64,) no-repeat 610rpx center;
  background-size: 11rpx 20rpx;
}
.course-person-info {
  padding: 0 0 20rpx 13rpx;
}
.course-person-name {
  margin-right: 20rpx;
}
.course-address {
  display: block;
  padding-left: 13rpx;
  width: 550rpx;
  line-height: 1.5;
}
/* pay btn */
.course-pay-btn {
  margin-top: 320rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 24rpx;
}