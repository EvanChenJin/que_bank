/* pages/course/courDetail/courDetail.wxss */
@import "../../../common/templateStyle/topBar.wxss";
/* course detail */
.course-detail-cont {
  padding: 0 20rpx 100rpx;
}
/* course intro */
.course-item {
  margin: 40rpx 0;
  padding: 40rpx 0 40rpx 40rpx;
  width: 670rpx;
  background: #fff;
  border-radius: 6rpx;
}
.course-item text {
  display: block;
}
.course-item-title {
  padding-right: 47rpx;
  margin-bottom: 32rpx;
  font-size: 30rpx;
  color: #404040;
  line-height: 45rpx;
}
.course-item-info {
  align-items: flex-end;
}
.course-teacher {
  margin-right: 40rpx;
}
.course-teacher image {
  margin-bottom: 24rpx;
  width: 62rpx;
  height: 62rpx;
}
.course-teacher text {
  font-size: 20rpx;
  color: #768979;
  line-height: 1;
}
.course-chapter-info {
  padding-right: 49rpx;
  font-size: 20rpx;
  color: #929E79;
}
.coursechapter-num {
  margin-bottom: 14rpx;
}
/* course detail */
.course-detail-panel {
  width: 710rpx;
  background: #fff;
  border-radius: 6rpx;
}
.course-detail-tab {
  padding: 0 30rpx;
  width: 650rpx;
  height: 76rpx;
  line-height: 76rpx;
  border: 2rpx solid #EFEFEF;
}
.tab-item {
  display: block;
  width: 192rpx;
  font-size: 30rpx;
  color: #252525;
  text-align: center;
}
.tab-item-active {
  color: #47B100;
  border-bottom: 2rpx solid;
}
/* detail item */
.course-detail-content {
  width: 710rpx;
}
.course-detail-intro {
  padding: 15rpx 30rpx 50rpx 30rpx;
  width: 650rpx;
}
.course-detail-intro image {
  width: 650rpx;
}
.course-detail-intro text {
  font-size: 30rpx;
  color: #404040;
}
.course-detail-kcb {
  padding: 0 40rpx;
  width: 630rpx;
}
.kcb-item {
  padding: 40rpx 0;
  width: 630rpx;
  line-height: 1;
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-position: right center;
  background-size: 44rpx 28rpx;
  border-bottom: 2rpx solid #f4f4f4;
}
.kcb-item-title {
  display: block;
  padding-bottom: 24rpx;
  width: 550rpx;
  font-size: 24rpx;
  color: #404040;
}
.kcb-item-des {
  display: block;
  font-size: 20rpx;
  color: #A7A7A7;
}
.course-detail-teacher {
  padding: 46rpx 40rpx 0 40rpx;
  width: 630rpx;
}
.teacher-cont image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.teacher-des {
  width: 480rpx;
  font-size: 24rpx;
  line-height: 1;
}
.teacher-name {
  display: block;
  padding-bottom: 24rpx;
  color: #252525;
}
.teacher-intro {
  display: block;
  color: #768979;
  line-height: 34rpx;
}
/* purchase bar */
.course-pur-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 98rpx;
  line-height: 98rpx;
  background: #fff;
}
.course-pur-num {
  margin-left: 84rpx;
  font-size: 20rpx;
  color: #B4B4B4;
}
.course-pur-price {
  font-size: 36rpx;
  color: #FF8A00;
}
.course-pur-btn {
  margin: 16rpx 23rpx 0 23rpx;
  width:162rpx;
  height:56rpx;
}
.course-pur-btn image {
  display: block;
  width:162rpx;
  height:56rpx;
  border-radius:3px;
}