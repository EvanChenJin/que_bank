/**index.wxss**/
/* subject */
.info-category {
  padding: 27rpx 20rpx 25rpx;
  width: 710rpx;
  font-size: 38rpx;
  color: #010101;
  background: #fff;
}
.category-national {
  margin: 0 94rpx 0 18rpx;
}
.category-active {
  padding-bottom: 20rpx;
  color: #47B100;
  border-bottom: 4rpx solid;
}
/* info swiper */
.info-swiper {
  padding: 34rpx 20rpx 0;
  width: 710rpx;
  height: 324rpx;
  background: #F4F4F4;
}
.info-swiper image {
  width: 710rpx;
  height: 324rpx;
}
/* info list */
.info-list {
  padding: 60rpx 18rpx 0;
  width: 710rpx;
  background-color: #F4F4F4;
}
.title {
  width: 100%;
  height: 48rpx;
  line-height: 1;
}
.txt {
  font-size: 36rpx;
  color: #000;
}
/* list and list-item */
.list {
  padding: 0 2rpx;
}
.item {
  padding: 40rpx 0;
  height: 153rpx;
  border-bottom: 2rpx solid #e5e5e5;
}
.item-img {
  width: 251rpx;
  height: 153rpx;
  border-radius: 4rpx;
}
.item-des {
  float: right;
  width: 424rpx;
}
.item-title {
  margin-top: 8rpx;
  height: 84rpx;
  font-size: 30rpx;
  line-height: 45rpx;
  color: #404040;
}
.item-addition {
  margin-top: 16rpx;
  font-size: 20rpx;
  color: #768979;
}
.item-time {
  padding-left: 20rpx;
  background: url(data:image/png;base64,) no-repeat center left;
  background-size: 16rpx 16rpx;
}
.item-num {
  float: right;
  padding-left: 20rpx;
  background: url(data:image/png;base64,)  no-repeat center left;
  background-size: 16rpx 8rpx;
}